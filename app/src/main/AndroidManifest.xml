<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zqf.theaim">

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- 允许读取手机相机、相册以及读写SD卡的权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />




    <application
        android:allowBackup="true"
        android:icon="@drawable/app1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Startpage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="@string/login_5"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PhoneRegisterActivity"
            android:exported="true"
            android:label="@string/login_6"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgetPasswordActivity"
            android:exported="true"
            android:label="@string/login_4"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddScheduleActivity"
            android:exported="true"
            android:label="@string/addaim"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetTimeActivity"
            android:exported="true"
            android:label="@string/settime"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PersonalCenterActivity"
            android:exported="true"
            android:label="个人中心"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="今天"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserImformationActivity"
            android:exported="true"
            android:label="账户"
            android:screenOrientation="portrait" />
        <activity android:name=".ModifyScheduleActivity" />
        <activity android:name=".AddReAimActivity" />
        <activity android:name=".Note_Show"
            android:label="记录本"/>
    </application>

</manifest>